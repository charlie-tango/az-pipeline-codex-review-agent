{
  "name": "@charlietango/az-pipeline-codex-review-agent",
  "version": "0.2.0",
  "description": "Codex-based pull request review agent that posts feedback to Azure DevOps",
  "license": "MIT",
  "type": "module",
  "main": "dist/reviewPr.js",
  "types": "dist/reviewPr.d.ts",
  "bin": {
    "codex-azure-review": "dist/reviewPr.js"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build && husky",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "review": "tsx src/reviewPr.ts",
    "review:local": "tsx src/reviewPr.ts --diff-file mocks/sample.diff --dry-run --debug"
  },
  "dependencies": {
    "@openai/codex-sdk": "^0.50.0",
    "azure-devops-node-api": "^15.1.1",
    "yargs": "^17.7.2",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@types/yargs": "^17.0.32",
    "@biomejs/biome": "^1.7.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "tsx": "^4.19.1",
    "typescript": "^5.4.4"
  },
  "lint-staged": {
    "*": "pnpm exec biome lint --staged --write --no-errors-on-unmatched"
  },
  "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d"
}
